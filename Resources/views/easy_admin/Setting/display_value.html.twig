{% set type = item.type %}
{% if type == 'date' %}
    {{ value|date(backend_config.formats.date) }}
{% elseif type == 'datetime' %}
    {{ value|date(backend_config.formats.datetime) }}
{% elseif type == 'time' %}
    {{ value|date(backend_config.formats.time) }}
{% elseif type == 'integer' %}
    {{ value }}
{% elseif type == 'richtext' %}
    {{ value|raw }}
{% elseif type == 'text' %}
    {{ value|easyadmin_truncate }}
{% elseif type == 'string' %}
    {{ value }}
{% else %}
    <pre>{{ value|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
{% endif %}
